# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# App
# 프로덕션: EC2 퍼블릭 IP 또는 도메인 (예: http://ec2-xx-xx-xx-xx.compute.amazonaws.com:8000)
BASE_URL=http://localhost:8000
# 프로덕션: Vercel 도메인 추가 (예: ["https://toonslate.vercel.app"])
CORS_ORIGINS=["http://localhost:5173"]

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
IP_HASH_SECRET=your-random-secret-here

# Gemini API (https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key

# Inpainting
INPAINTING_PROVIDER=solid_fill  # "solid_fill" | "replicate_lama" | "iopaint_lama"
INPAINTING_DEBUG_DIR=  # 디버그 이미지 저장 경로 (비어있으면 비활성화)

# Replicate API (https://replicate.com/account/api-tokens)
# INPAINTING_PROVIDER=replicate_lama 사용 시 필요
REPLICATE_API_TOKEN=your-replicate-api-token

# IOPaint (HuggingFace Space, 무료)
# INPAINTING_PROVIDER=iopaint_lama 사용 시 적용
IOPAINT_SPACE_URL=https://sanster-iopaint-lama.hf.space
IOPAINT_TIMEOUT=120
